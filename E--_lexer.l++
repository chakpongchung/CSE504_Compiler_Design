%option noyywrap
%option never-interactive

%{
#include "E--_lexer.tab.h"
#include <iostream>

using namespace std;



const char* yyfilename = "";
int yylinenum = 0;


%}




/* Definitions */

DIGIT	 						 [0-9]
EXP							 {DIGIT}*([Ee][-+]?{DIGIT}+)
HEX							"0x"[a-fA-F0-9]+
UINTNUM		  					{DIGIT}+
FLOAT_1							{UINTNUM}*"."({UINTNUM}*{EXP}?)
FLOAT_2							{UINTNUM}+{EXP}
FLOAT							({FLOAT_1}|{FLOAT_2})
TOK_HASH						 [#]
ID							[a-zA-Z_][a-zA-Z0-9_]*
STRING 							"\""([^\n\"]|(\\.))*(\"|\n)
SPECIAL							"."[Ee][-+]?{DIGIT}*
%%




" " {}


{TOK_HASH}.*					{
							 char *temp = strtok(yytext, " ");
							  int count = 0, count1=0;
        							while (count<3) {
									
									count++;
									switch(count){
									case 2: yylinenum = atoi(temp)-1; break;
									case 3: 
										{	
										char *temp_filename = new char[40];
										count1=0;
        									while(*temp!=0)
        									{
          
         									   if(*temp!='\"')
                									{
                     
                    									temp_filename[count1++] = *temp;
                   								
                									}	
                									*temp++;
       										}	
        									temp_filename[count1] ='\0';
									        
        									yyfilename = temp_filename; break;
										}
									default: break;
									}
								
								        temp = strtok(0, " ");
      							    	}
						
							//printf("\n%s\n", yytext);
							
						}

 /**************** Recognize operators ****************/

